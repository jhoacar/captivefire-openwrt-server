{
    "type": "project",
    "license": "proprietary",
    "description": "Captivefire - GraphQL",
    "keywords": [
        "graphql",
        "openwrt",
        "captivefire",
        "wifi",
        "captiveportal"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^7.3|^8.1",
        "symfony/http-foundation": "^6.1|^5.4",
        "webonyx/graphql-php": "^0.13.8",
        "vlucas/phpdotenv": "^5.4",
        "ext-iconv": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-tokenizer": "*",
        "ext-xsl": "*",
        "friendsofphp/php-cs-fixer": "^3.9|^3.4",
        "phpunit/phpunit": "^9.0",
        "theseer/phpdox": "^0.7"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {},
    "scripts": {
        "auto-scripts": {},
        "post-install-cmd": [],
        "post-update-cmd": [
            "git config core.hooksPath .githooks"
        ],
        "test": [
            "phpunit tests"
        ],
        "sniff": [
            "php-cs-fixer fix -vvv --dry-run --show-progress=dots"
        ],
        "lint": [
            "php-cs-fixer fix -vvv --show-progress=dots"
        ],
        "phpdox" : [
            "phpdox"
        ]
    },
    "conflict": {},
    "extra": {
        "ext-iconv": "Used in symfony/http-foundation",
        "ext-mbstring": "Used in vlucas/phpdotenv, webonyx/graphql-php, theseer/phpdox and phpunit/phpunit",
        "ext-tokenizer": "Used in friendsofphp/php-cs-fixer",
        "ext-dom": "Used in phpunit/phpunit and theseer/phpdox",
        "ext-xsl": "Used in theseer/phpdox",
        "changePHPversion": "sudo update-alternatives --config php"
    }
}
