config uhttpd 'captivefire'
	list listen_http '0.0.0.0:80'
	list listen_http '[::]:80'
	list listen_https '0.0.0.0:443'
	list listen_https '[::]:443'
    option redirect_https '0'
	option home '/app/public'
	option index_file '/index.php'
	option index_page 'index.php'
	option error_page '/index.php'
	list interpreter '.php=/usr/bin/php-cgi'
	list lua_prefix '/cgi-bin/luci=/usr/lib/lua/luci/sgi/uhttpd.lua'
	option no_symlinks '0'
	option no_dirlists '1'
	option cert '/etc/uhttpd.crt'
	option key '/etc/uhttpd.key'
	option ubus_prefix '/ubus'

# Its necessary luci-ssl package

config cert 'defaults'
	option days '730'
	option key_type 'ec'
	option bits '2048'
	option ec_curve 'P-256'
	option country 'AR'
	option state 'Buenos Aires'
	option location 'Buenos Aires'
	option commonname 'captivefire.net'
